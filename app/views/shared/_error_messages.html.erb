<% if object.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      the form contains <%= object.errors.count %> errors
    </div>
    <ul>
      <% object.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>